{\n  "info": {\n    "name": "Order Execution Engine\",\n    "description": "Limit Order Execution with DEX Routing and WebSocket Updates\",\n    "version": \"1.0.0\",\n    "schema\": \"https://schema.getpostman.com/json/collection/v2.1.0/collection.json\"\n  },\n  \"item": [\n    {\n      \"name": \"Health Check\",\n      \"request\": {\n        \"method\": \"GET\",\n        \"url\": \"{{base_url}}/health\"\n      }\n    },\n    {\n      \"name": \"Submit Limit Order\",\n      \"request\": {\n        \"method\": \"POST\",\n        \"header\": [\n          {\n            \"key\": \"Content-Type\",\n            \"value\": \"application/json\"\n          }\n        ],\n        \"url\": \"{{base_url}}/api/orders/execute\",\n        \"body\": {\n          \"mode\": \"raw\",\n          \"raw\": \"{\\n  \\\"type\\\": \\\"LIMIT\\\",\\n  \\\"tokenIn\\\": \\\"SOL\\\",\\n  \\\"tokenOut\\\": \\\"USDC\\\",\\n  \\\"amountIn\\\": 1.5,\\n  \\\"limitPrice\\\": 185.50,\\n  \\\"slippage\\\": 0.02\\n}\"\n        }\n      }\n    },\n    {\n      \"name\": \"Get All Orders\",\n      \"request\": {\n        \"method\": \"GET\",\n        \"url\": \"{{base_url}}/api/orders?limit=10&offset=0\"\n      }\n    },\n    {\n      \"name\": \"Get Order by ID\",\n      \"request\": {\n        \"method\": \"GET\",\n        \"url\": \"{{base_url}}/api/orders/{{order_id}}\"\n      }\n    },\n    {\n      \"name\": \"Get Statistics\",\n      \"request\": {\n        \"method\": \"GET\",\n        \"url\": \"{{base_url}}/api/stats\"\n      }\n    }\n  ],\n  \"variable\": [\n    {\n      \"key\": \"base_url\",\n      \"value\": \"http://localhost:3000\",\n      \"type\": \"string\"\n    },\n    {\n      \"key\": \"order_id\",\n      \"value\": \"replace_with_order_id\",\n      \"type\": \"string\"\n    }\n  ]\n}\n